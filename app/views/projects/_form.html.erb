<!--
Inside your views, use the 'simple_form_for' with one of the Bootstrap form
classes, '.form-horizontal' or '.form-inline', as the following:

  = simple_form_for(@user, html: { class: 'form-horizontal' }) do |form|
-->

<%= simple_form_for @project, html: {multipart: true} do |f| %>
  <% if @project.errors.any? %>
    <p>
      <%= @project.errors.count %> prevented this recipe from saving.
    </p>
    <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li>msg</li>
      <% end %>
    </ul>
  <% end %>

  <%= f.input :title, label: 'Título', input_html: {class: 'form-control'} %>
  <%= f.input :description, label: 'Descripción breve', input_html: {class: 'form-control'} %>
  <%= f.button :submit, label: 'Crear', class: 'btn btn-default' %>
<% end %>
