<!--
Inside your views, use the 'simple_form_for' with one of the Bootstrap form
classes, '.form-horizontal' or '.form-inline', as the following:

  = simple_form_for(@user, html: { class: 'form-horizontal' }) do |form|
-->

<%= simple_form_for @project, html: {multipart: true} do |f| %>
  <% if @project.errors.any? %>
    <p>
      <%= @project.errors.count %> prevented this recipe from saving.
    </p>
    <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li>msg</li>
      <% end %>
    </ul>
  <% end %>

  <%= f.file_field :thumbnail %><br>
  <%= f.input :title, label: 'Título', input_html: {class: 'form-control'} %>
  <%= f.input :description, label: 'Descripción breve', input_html: {class: 'form-control'} %>
  <%= f.input :tag_list, label: 'Category', :collection => ['Science', 'Technology', 'Engineering', 'Art', 'Mathematics'], input_html: {class: 'btn btn-default dropdown-toggle', type: "button", id: "dropdownTags"} %>
  <!-- include = below to show the tags field -->
  <% f.input :tag_list, label: 'Tags (separated by commas)', input_html: {class: 'form-control'} %>

  <%= f.cktext_area :instructions, :ckeditor => {:uiColor => '#c1f5f5', :toolbar => 'mini'} %>


  <%= f.button :submit, label: 'Create', class: 'btn btn-default' %>
<% end %>
