<%= image_tag @user.avatar.url(:medium) %>

<h1><%= @user.username %></h1>
<% if user_signed_in? %>
  <% if current_user.email == @user.email %>
    <p><%= link_to 'Edit Profile', edit_user_registration_path, :action => 'get', :method => 'get'%></p>
    <!-- private data -->
    <p>Only showed in user's own profile page when user_signed_in</p>
  <% end %>
<% end %>

<!-- public data -->
<p>
  <strong>Link:</strong><a href="<%= @user.link %>"> <%= @user.link %></a><br>
  <strong>Email:</strong> <%= @user.email %>
</p>
<p>
  <%= @user.description %>
</p>
